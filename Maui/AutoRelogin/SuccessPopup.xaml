<?xml version="1.0" encoding="utf-8" ?>
<mopup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopup="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="AutoRelogin.SuccessPopup"
             Title="SuccessPopup"
                 MinimumHeightRequest="150" WidthRequest="150" HeightRequest="150" MinimumWidthRequest="150" MaximumHeightRequest="150" MaximumWidthRequest="150">
    <Frame BorderColor="Transparent" BackgroundColor="DarkMagenta" VerticalOptions="Center" HorizontalOptions="Center" CornerRadius="10" 
                 MinimumHeightRequest="150" WidthRequest="150" HeightRequest="150" MinimumWidthRequest="150" MaximumHeightRequest="150" MaximumWidthRequest="150">
        <Label Text="{Binding Message}" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Frame>
</mopup:PopupPage>